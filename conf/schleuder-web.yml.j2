defaults: &defaults
  web_hostname: $schleuder_web_web_hostname
  mailer_from: $schleuder_web_mailer_from 
  # For delivery_method, sendmail_settings and smtp_settings see
  # <http://guides.rubyonrails.org/action_mailer_basics.html#action-mailer-configuration>.
  delivery_method: sendmail
  sendmail_settings:
    arguments: '-i'
  smtp_settings:
    address: localhost
    port: 25
    #openssl_verify_mode: none
  api:
    host: @SCHLEUDER_CLI_HOST@
    port: @SCHLEUDER_CLI_PORT@
    tls_fingerprint: @SCHLEUDER_TLS_FINGERPRINT@
  api_key: @SCHLEUDER_API_KEY@ 
  superadmins:
{% for account in schleuder_web_superadmins %}
    - {{ account }}
{% endfor %}

production:
  <<: *defaults
